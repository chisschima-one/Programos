<?xml version='1.0' encoding='utf-8'?>
<widget id="progromoslimited.topgainsmobile.myapp" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TopGains Mobile</name>
    <description>
        Programos software Limmited TopGains Mobile App 
    </description>
    <author email="infodev@programoslimited.com" href="http://www.programoslimited.com">
        Programos Software Limited
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.1" />
    <plugin name="cordova-plugin-network-information" spec="1.2.0" />
    <plugin name="cordova-plugin-dialogs" spec="1.2.0" />
    <plugin name="cordova-plugin-splashscreen" spec="1.0.0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="phonegap-version" value="3.7.0" />
     <preference name="splashscreen" value="screen" />
    <preference name="splashscreendelay" value="1000" />

    <platform name="android">
          <!-- you can use any density that exists in the Android project -->
    <splash src="res/screen/android/hdpi" density="hdpi"/><!--land-hdpi  -->
    <splash src="res/screen/android/ldpi" density="ldpi"/><!--land-ldpi  -->
    <splash src="res/screen/android/mdpi" density="mdpi "/><!--land-mdpi  -->
    <splash src="res/screen/android/xhdpi" density="xhdpi"/><!--land-xhdpi  -->
       
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" /> 
        

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="wp8">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>

